<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
    <p>
      <%= link_to "Edit this post", edit_post_path(post) %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
